<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.experiments.thirdparty.shimmer.ShimmerTextView
        android:id="@+id/txt_current_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_location_searching_white_18dp"
        android:drawablePadding="@dimen/margin_5"
        android:drawableStart="@drawable/ic_location_searching_white_18dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin_10"
        android:text="@string/retrieving_location"
        android:textAllCaps="false"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/font_16"
        app:reflectionColor="@color/md_blue_grey_900"
        custom:typeface="@string/font_montserrat"
        tools:text="Dummy" />

</LinearLayout>