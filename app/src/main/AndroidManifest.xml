<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidexperiments.android.where">

    <application
        android:name="com.experiments.whereapp.WhereApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!--activities-->
        <activity
            android:name="com.experiments.whereapp.modules.home.activities.HomeActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--meta data-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/places_library_api_key" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="49b4ff3925e769d711a02714e8965b593ab1e897" />

    </application>

</manifest>
